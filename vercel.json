{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 3,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "regions": ["bom1"],
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/api/(?<path>.*)", "destination": "/api/$path" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
